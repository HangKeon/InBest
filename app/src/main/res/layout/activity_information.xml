<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="←개인정보 수정"
            android:textColor="#7A7878"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="sy1234"
                    android:textColor="#7A7878"
                    android:textColorHint="#7A7878"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <EditText
                        android:id="@+id/nickname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:background="#F4F4F4"
                        android:hint="닉네임(2~12자 이내)"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:textColor="#7A7878"
                        android:textColorHint="#7A7878"
                        android:textSize="12dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="2"
                        android:background="#B77CFC"
                        android:text="중복확인"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="30dp"
                    android:background="#F4F4F4"
                    android:hint="이메일 주소"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="#7A7878"
                    android:textColorHint="#7A7878"
                    android:gravity="center_vertical"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/pwd"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="30dp"
                    android:background="#F4F4F4"
                    android:hint="비밀번호 (8자리 이상, 문자/숫자/기호 사용 가능)"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="#7A7878"
                    android:textColorHint="#7A7878"
                    android:textSize="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginTop="30dp"
                    android:background="#F4F4F4"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="#7A7878"
                    android:textColorHint="#7A7878"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:text="새 비밀번호를 입력하지 않을 시, 비밀번호는 변경되지 않습니다."
                    android:textSize="10sp"
                    android:textColor="#7A7878"
                    android:gravity="center"
                    />


                <Button
                    android:id="@+id/complete_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="50dp"
                    android:background="#B77CFC"
                    android:text="수정"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</FrameLayout>